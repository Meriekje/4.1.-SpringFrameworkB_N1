package cat.itacademy.s04.t01.n01.controller;

import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.bind.annotation.GetMapping;


public class HelloWorldController {
   @GetMapping("/salute")
    public String salute(@RequestParam(name = "nom", defaultValue = "UNKNOWN") String nom) {
        return "Hola, " + nom + ". Estàs executant un projecte Maven.";
    }

@GetMapping("/salute2/{nom}")
    public String salute2(@PathVariable(name = "nom", required = false) String nom) {
        if (nom == null) nom = "UNKNOWN";
        return "Hola, " + nom + ". Estàs executant un projecte Maven.";
    }
}
